<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.collegecanteen">
    <!-- permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/update_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/update_app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CollegeCanteen"
        android:usesCleartextTraffic="true"
        tools:ignore="AllowBackup"
        tools:targetApi="m">
        <activity
            android:name=".activities.OrderActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SnacksProductActivity"
            android:exported="false" />
        <activity
            android:name=".activities.DessertsProductActivity"
            android:exported="false" />
        <activity
            android:name=".activities.DrinkProductActivity"
            android:exported="false" />
        <activity android:name=".activities.FastFoodProductActivity" />
        <activity android:name=".activities.CategoryActivity" />
        <activity
            android:name=".activities.PhoneVerify"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.PhoneAuth"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>